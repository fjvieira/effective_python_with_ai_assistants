{
	"name": "Effective-Python-With-AI",
	"image": "mcr.microsoft.com/devcontainers/python:3.13",

    "features": {
        "ghcr.io/devcontainers-extra/features/pdm:2": {}
    },
	"postCreateCommand": "pdm install --prod --no-lock",
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"GitHub.copilot",
				"GitHub.copilot-chat"
			],
			"settings": {
				"locale": "en"
			}
		}
	}

}
